{% macro wrap_comment_in_markup(comment) -%}

    <li class="{{ comment.is_issue_node and 'issue' or 'comment' }}">
      <div>
       {% if 'title' in comment: %}
        <div class="topic-title">{{ comment.title }}
            <a href="{{ comment.html_url }}" target="_blank">on GitHub</a>
        </div>
       {% endif %}
       {% if is_issue_node: %}
        ISSUE!
       {% endif %}
        <br /><strong>TODO: grab more markup from views/plugins_localcomments.py node()</strong>
      </div>
    </li>

    <li class="{{ comment.is_issue_node and 'issue' or 'comment' }}">
        <div class="msg-wrapper" 
             id="{{ comment.get('number', comment['id']) }}">
           {% if 'title' in comment: %}
            <div class="topic-title">Emberiza calandra missing other IDs (e.g. NCBI)
                <a href="https://github.com/OpenTreeOfLife/feedback/issues/588"
                   target="_blank">on GitHub</a>
            </div>
           {% endif %}
            <div class="{{ issue_node and 'body issue-body' or 'body comment-body' }}">
                <!-- safe markup goes here -->
            </div>
            <div class="byline">
                <a href="{{ 'TODO-github-url' }}" target="_blank">{{ 'TODO-name' }}</a>
                - {{ 'TODO-friendly-post-age' }}
                <span class="controls">
                  {% if issue_node: %}
                    <a class="toggle" href="#">
                      {% if child_comments: %}
                        Hide comments
                      {% else: %}
                        Show/add comments
                      {% endif %}
                    </a>
                    {% if comment['user']['login'] == current_user_id: %}
                        <span> | </span>
                    {% endif %}
                  {% endif %}
                  {% if comment['user']['login'] == current_user_id: %}
                    <a class="delete" href="#">Delete</a>
                  {% endif %}
                </span>
            </div>
        </div>
      {% if issue_node: %}
        <ul style="display: {{ child_comments and 'block' or 'none' }};">
            <!-- any replies go here (recurse?) -->
        </ul>
        <div class="reply" 
             style="{{ '' if child_comments else 'display: none;' }}">
            <a class="btn btn-small reply" href="#">Add a comment</a>
        </div>
      {% endif %}
    </li>

{%- endmacro -%}
